			<div class="form">
                <form action="@Url.Action("update","Edit", new {id=@Model.Doctor_id})" method="post">
                    <div class="personal">
                        <p>Personal information:</p>
                        <input type="text" name="name" placeholder="Name" value="@Model.Name" />
                        <br />
                        <input type="tel" name="phone" value="@Model.Phone_num" placeholder="Phone" />
                        <br />
                        <input type="text" name="address" value="@Model.Address" placeholder="Address" />
                        <br />
                     
                        <div class="radio">
                            <label>Male</label>
                            <input type="radio" name="male" value="male" class="male_radio" checked="checked" />
                            <br />
                            <label>Female</label>
                            <input type="radio" name="female" value="female" />
                        </div>
                    </div>
                  
                    <div class="professional">
                        <p>Professional Information: </p>
                        <input type="text" name="experience" placeholder="experience" value="@Model.Experince" />
                        <br />
                        <input type="text" name="specialization" placeholder="specialization" value="@Model.Specialty" />
                        <br />
                        <input type="text" name="days" placeholder="days" value="@Model.Days" />
                        <br />
                        <input placeholder="Office Open" class="textbox-n" type="text" onfocus="(this.type='time')" id="time" value="@Model.Oppening_time" />

                        <br />
                        <input placeholder="Office close" class="textbox-n" type="text" onfocus="(this.type='time')" id="time" value="@Model.Closing_time" />

                        <br />
                        <input type="submit" name="Update" value="Update" style="color:#136DA2" onclick="alert('Record updated');" />
                    </div>
                </form>
