@model IEnumerable<EAD_Project.Models.Doctor>

@{
    ViewBag.Title = "Index";
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 5px;
        }
    </style>
</head>
<div style="font-family: Arial; background-color: #f4f4f4">
 
    <h2 style="color:#136DA2;font-size:30px;">List OF Doctors</h2>
<p>
    <a style="margin:500px; color:#136DA2; font-size:30px; " href="@Url.Action("index", "Add")">Add new Doctor</a>
</p>
<table style=" margin-top:20px; width:80%; margin-left:100px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Doctor_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone_num)
