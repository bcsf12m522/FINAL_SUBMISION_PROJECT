        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone_num)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Oppening_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Closing_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Days)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Experince)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.image)
        </td>
        <td>
            <a id="someLink" href="@Url.Action("delete", "Edit", new { id = item.Doctor_id })">Delete</a>
            <a href="@Url.Action("index", "Edit", new {id=item.Doctor_id })">EDIT</a>
        </td>
    </tr>
}


</table>
</div>